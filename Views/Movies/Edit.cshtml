@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-primary fw-bold mb-4">✏️ Edit Movie</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" class="shadow-sm p-4 bg-white rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold text-dark"></label>
                <input asp-for="Title" class="form-control" placeholder="Update movie title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ReleaseDate" class="form-label fw-semibold text-dark"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Genre" class="form-label fw-semibold text-dark"></label>
                <input asp-for="Genre" class="form-control" placeholder="e.g. Action, Drama, Sci-Fi" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-semibold text-dark"></label>
                <input asp-for="Price" class="form-control" placeholder="e.g. 12.99" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Save" class="btn btn-primary fw-semibold" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="text-decoration-none text-primary fw-semibold">← Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
